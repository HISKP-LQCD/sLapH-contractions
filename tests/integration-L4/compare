#!/bin/bash
# Copyright Â© 2017 Martin Ueding <dev@martin-ueding.de>

set -e
set -u

tmp="$(mktemp)"

for path in correlators-20171113/*.h5; do
    basename="${path##*/}"

    echo "$basename"

    if ! h5diff -r -d 1e-12 "$path" "correlators/$basename" &> "$tmp"; then
      cat "$tmp"
      exit 1
    fi
done

rm -f "$tmp"
