ompnumthreads = 1

L=4
T=4

DisableIOChecks = no
DebugLevel = 2
InitialStoreCounter = 1000
Measurements = 1
2kappamu = 0.155
kappa = 0.155

# use anti-periodic boundary conditions
# because we are using gauge compression, the QUDA interface 
# will use (-1) boundary conditions for this
# and ignore the phases 
BCAngleT = 1

GaugeConfigInputFile = /hiskp2/gauges/test4x4x4x4/conf
UseEvenOdd = yes
UseRelativePrecision = yes

EnableSubProcess = no
EnableLowmem = no

SourceType = Volume
ReadSource = no
NoSamples = 1

ranluxdlevel=2
reproducerandomnumbers=no

#BeginExternalInverter QUDA
#  FermionBC = apbc
#EndExternalInverter

BeginOperator CLOVER
  2kappamu = 0.0
  csw = 1.0
  kappa = 0.155
  Solver = bicgstab
#  useexternalinverter = quda
  SolverPrecision = 1e-19
  MaxSolverIterations = 25000
  usesloppyprecision = half
  usecompression = 18
EndOperator

