#!/bin/bash +x

for cfg in {% for config in config_ids %}{{ config }} {% endfor %}; do
  echo "submitting conf ${cfg}"
 
  printf -v j %04d "${cfg}"

  {% if machine == 'qbig' %}
  sbatch cnfg${j}/job_script_qbig_slurm.sh
  {% elif machine == 'jurecabooster' %}
  sbatch cnfg${j}/job_script_jurecabooster.sh
  {% elif machine == 'juwels' %}
  sbatch cnfg${j}/job_script_juwels.sh
  {% endif %}
done
